<Dialog:CustomDialog x:Class="Nhafo.WPF.Dialogs.AnimatedGrafoDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:local="clr-namespace:Nhafo.WPF.Dialogs"
                     xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                     mc:Ignorable="d" 
                     d:DesignWidth="600">
    <Grid Margin="0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="grid" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Gerar Grafo" Margin="10,0,0,0" Padding="25,12" Style="{StaticResource AccentedButton}" Click="GrafoButtonClick" Name="grafoButton" />
            <Button Content="Fechar" Margin="10,0,0,0" Padding="25,12" Click="CancelButtonClick" />
        </StackPanel>
    </Grid>
</Dialog:CustomDialog>
