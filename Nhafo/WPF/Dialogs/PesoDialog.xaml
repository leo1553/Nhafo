<Window x:Class="Nhafo.WPF.Dialogs.PesoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nhafo.WPF.Dialogs"
        mc:Ignorable="d"
        Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Adicionar Peso">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="35" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock FontFamily="{StaticResource Roboto}" Text="Insira o Peso:" />
        <TextBox Margin="0,5,0,0" Grid.Row="1" FontFamily="{StaticResource Roboto}" VerticalContentAlignment="Center" x:Name="textBox" />
        <Button Margin="0,5,0,0" Grid.Row="2" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Confirmar" IsDefault="True" x:Name="button" />
    </Grid>
</Window>
