<local:DraggableUserControl x:Class="Nhafo.WPF.Controls.VerticeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nhafo.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             x:Name="uc">
    <Grid>
        <Ellipse HorizontalAlignment="Left" VerticalAlignment="Top" Width="{Binding ElementName=uc, Path=Width}" Height="{Binding ElementName=uc, Path=Height}" Stroke="{Binding ElementName=uc, Path=Stroke}" Fill="{Binding ElementName=uc, Path=Fill}" />
        <TextBlock Text="{Binding ElementName=uc, Path=Text}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding ElementName=uc, Path=FontSize}" >
            <!--<TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" Direction="0" BlurRadius="6"/>
            </TextBlock.Effect>-->
        </TextBlock>
    </Grid>
</local:DraggableUserControl>
