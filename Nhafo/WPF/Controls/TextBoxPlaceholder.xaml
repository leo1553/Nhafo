<UserControl x:Class="Nhafo.WPF.Controls.TextBoxPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nhafo.WPF.Controls"
             mc:Ignorable="d" Foreground="LightGray" x:Name="uc"
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBlock Text="{Binding Text, ElementName=uc}" IsHitTestVisible="False" Padding="7,4" />
</UserControl>
